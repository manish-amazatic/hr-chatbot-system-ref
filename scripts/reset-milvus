#!/bin/bash

echo "This will reset all milvus data!"
read -p "Are you sure? (yes/no): " confirm

if [ "$confirm" != "yes" ]; then
    echo "Aborted."
    exit 0
fi

echo ""
echo "Stopping services..."
docker-compose down

echo ""
echo "Removing volumes..."
docker volume rm milvus_data 2>/dev/null || true

echo ""
echo "Starting services..."
docker-compose up -d

echo ""
echo "Waiting for services to be healthy..."
sleep 10

echo ""
echo "Generating HR policies..."
docker-compose exec hr-chatbot-service python scripts/generate_hr_policies_pdf.py

echo ""
echo "Ingesting to Milvus..."
docker-compose exec hr-chatbot-service python scripts/ingest_hr_policies_pdf.py

echo ""
echo "âœ… Databases reset successfully!"
echo ""
